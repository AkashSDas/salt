{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "lib": ["ESNext"],
    "strictNullChecks": false,
    "esModuleInterop": true,
    "typeRoots": ["@types"]
  },
  "compileOnSave": true,
  "include": ["src", "@types"]
}
